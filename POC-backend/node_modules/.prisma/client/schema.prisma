// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  name      String
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CustomerProfile {
  id               String    @id @default(auto()) @map("_id") @db.ObjectId
  customerId       String
  basicInfo        Json
  financialProfile Json?
  socialProfile    Json?
  dataSources      Json[]
  meetings         Meeting[]
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@unique([customerId])
}

model Meeting {
  id         String          @id @default(auto()) @map("_id") @db.ObjectId
  customerId String
  profile    CustomerProfile @relation(fields: [customerId], references: [customerId])
  summary    String
  notes      String
  audioUrl   String?
  sentiment  Float?
  nextSteps  Json?
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
}

model Investment {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  customerId String
  type       String
  amount     Float
  date       DateTime
  status     String
  details    Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([customerId])
}

model DataSource {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  type      String
  config    Json
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
